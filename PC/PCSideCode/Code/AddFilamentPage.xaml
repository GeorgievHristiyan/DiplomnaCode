<Page x:Class="Code.AddFilamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Code"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddFilamentPage">

    <Grid>
        <Label x:Name="label" Content="Name : " HorizontalAlignment="Left" Margin="25,34,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="82"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="20" Margin="128,42,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146"/>
        <Button x:Name="AddFilamentButton" Content="Add" HorizontalAlignment="Left" Margin="62,213,0,0" VerticalAlignment="Top" Width="173" Click="AddFilamentButton_Click"/>
        <Label x:Name="label1" Content="Color :" HorizontalAlignment="Left" Margin="26,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontSize="16" FontWeight="Bold" Width="72">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.702"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.314"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="label2" Content="Length :" HorizontalAlignment="Left" Margin="25,111,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="86"/>
        <Label x:Name="label3" Content="Material :" HorizontalAlignment="Left" Margin="25,148,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="100"/>
        <TextBox x:Name="ColorTextBox" HorizontalAlignment="Left" Height="17" Margin="128,79,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="LengthTextBox" HorizontalAlignment="Left" Height="17" Margin="128,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146" RenderTransformOrigin="1.214,-0.896"/>
        <TextBox x:Name="MaterialTextBox" HorizontalAlignment="Left" Height="17" Margin="128,156,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146"/>

    </Grid>
</Page>
